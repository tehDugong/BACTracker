<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.cs160.bactracker" >

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL"></uses-permission>

    <uses-feature android:name="android.hardware.camera"
        android:required="true"/>


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".PhoneActivity"
            android:label="BACtracker"
            android:theme="@style/PhoneTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DBActivity"
            android:label="BACtracker"
            android:theme="@style/PhoneTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".PhoneListeningService"
            android:enabled="true"
            android:exported="true" >
            <intent-filter>
                <action android:name="com.google.android.gms.wearable.BIND_LISTENER" />
            </intent-filter>
        </service>

        <activity
            android:name=".ProfilePressedActivity"
            android:label="Profile"
            android:theme="@style/PhoneTheme" >
        </activity>
        <activity
            android:name=".AddDrinkActivity"
            android:label="Add Drink"
            android:theme="@style/PhoneTheme">
        </activity>
        <activity
            android:name=".DrinkInfoActivity"
            android:theme="@style/PhoneTheme">
        </activity>
    </application>

</manifest>
