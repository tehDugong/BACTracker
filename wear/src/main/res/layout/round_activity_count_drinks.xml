<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="org.cs160.bactracker.CountDrinks"
    tools:deviceIds="wear_round" android:background="@color/white">
    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:layout_centerHorizontal="true"
        android:text="-"
        android:id="@+id/minusCountButton"
        android:onClick="minusButtonClick"/>

    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="+"
        android:id="@+id/plusCountButton"
        android:onClick="plusButtonClick"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/plusCountButton"
        android:layout_centerHorizontal="true">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/drinkImage"
            android:background="@color/blue"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/drinkImage"
        android:id="@+id/drinkName"
        android:layout_alignLeft="@id/drinkImage"
        android:text="Light Beer"
        android:textColor="@color/black" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/drinkCount"
        android:layout_below="@id/drinkImage"
        android:layout_alignRight="@id/drinkImage"
        android:text="0"
        android:textColor="@color/black"
        />
    </RelativeLayout>

</RelativeLayout>
