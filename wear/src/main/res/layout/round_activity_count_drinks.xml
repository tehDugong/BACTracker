<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.cs160.bactracker.CountDrinks"
    tools:deviceIds="wear_round"
    android:background="@color/black">
    <Button
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="#ffeb3b"
        android:text="+"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:id="@+id/plusButton"/>
    <Button
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25dp"
        android:background="#ffeb3b"
        android:textSize="40dp"
        android:text="-"
        android:textColor="@color/black"
        android:id="@+id/minusButton">
    </Button>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/plusButton"
        android:layout_above="@id/minusButton"
        >

        <ImageView
            android:layout_width="75dp"
            android:layout_height="80dp"
            android:id="@+id/drinkImage"
            android:src="@drawable/gin_and_tonic"
            android:layout_marginEnd="28dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Absolute Vodka"
            android:gravity="center"
            android:id="@+id/drinkName"
            android:textSize="15dp"
            android:layout_alignTop="@+id/drinkImage"
            android:layout_toStartOf="@+id/drinkImage"
            android:layout_marginTop="5dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:text="1"
            android:gravity="center"
            android:textColor="#ffeb3b"
            android:layout_marginRight="10dp"
            android:id="@+id/drinkCount"
            android:layout_alignBottom="@+id/drinkImage"
            android:layout_alignStart="@+id/drinkName"
            android:layout_marginStart="42dp" />

    </RelativeLayout>
</RelativeLayout>

