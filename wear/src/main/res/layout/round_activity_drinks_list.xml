<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="org.cs160.bactracker.DrinksListActivity"
    tools:deviceIds="wear_round" android:background="@color/black">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingTop="15dp"
        android:text="Liquor"
        android:textSize="15dp"
        android:textColor="@color/white"
        android:id="@+id/drinkListTitle"/>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/drinkListTitle"
        android:paddingTop="4dp"
        android:paddingBottom="1dp"
        android:clipToPadding="true">
    <GridView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:numColumns="2"
        android:background="@drawable/rough_paper_background"
        android:layout_marginTop="10dp"
        android:id="@+id/drinksGridView"
        android:horizontalSpacing="10dp"
        android:paddingTop="30dp"
        android:paddingBottom="50dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:clipToPadding="false"
        android:verticalSpacing="10dp"
        ></GridView>
    </RelativeLayout>


</RelativeLayout>
